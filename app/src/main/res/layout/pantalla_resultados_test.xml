<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xmls="http://schemas.android.com/tools">
    <ScrollView
        xmls:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Scrool"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/Scrool"
            android:id="@+id/Constraint">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RespuestasText"
        android:text="Las respuestas del test son:"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textColor="@color/cardview_dark_background"/>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/MiGrafico"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="300sp"
        android:layout_height="300sp"
        app:layout_constraintTop_toBottomOf="@id/RespuestasText"
        />
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/TablaAptitudes"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="300sp"
        android:layout_height="300sp"
        app:layout_constraintTop_toBottomOf="@id/MiGrafico"
        />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>