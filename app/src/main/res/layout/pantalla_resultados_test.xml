<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xmls="http://schemas.android.com/tools">
    <ScrollView
        xmls:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Scrool"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/Scrool"
            android:id="@+id/Constraint">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RespuestasText"
        android:text="@string/las_respuestas_del_test_son"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textColor="@color/cardview_dark_background"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtIntereses"
        app:layout_constraintTop_toBottomOf="@id/RespuestasText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/intereses"
        android:textSize="25sp"
        />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/MiGrafico"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtIntereses" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAptitudes"
        app:layout_constraintTop_toBottomOf="@id/MiGrafico"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/aptitudes"
        android:textColor="#000000"
        android:textSize="25sp"
        />
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/TablaAptitudes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="300sp"
        android:layout_height="300sp"
        app:layout_constraintTop_toBottomOf="@id/txtAptitudes"
        />
            <Space
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:id="@+id/Spacio"
                app:layout_constraintTop_toBottomOf="@id/TablaAptitudes"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>