<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xmls="http://schemas.android.com/tools">
    <ScrollView
        xmls:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Scrool"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/Scrool"
            android:id="@+id/Constraint">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="@+id/Constraint"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20sp"
            android:contentDescription="logo de la facultad de la carrera"
            android:id="@+id/ImagenDeLaFacultadCarreraViewPrivada"/>
        <TextView
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginStart="20sp"
            android:text="@string/nombre_de_la_carrera"
            app:layout_constraintBottom_toBottomOf="@id/ImagenDeLaFacultadCarreraViewPrivada"
            app:layout_constraintTop_toTopOf="@id/ImagenDeLaFacultadCarreraViewPrivada"
            android:layout_marginTop="5sp"
            android:id="@+id/NombreDeLaCarreraViewPrivada"
            app:layout_constraintLeft_toRightOf="@id/ImagenDeLaFacultadCarreraViewPrivada"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#000000"
            android:id="@+id/DescripcionCarreraViewPrivada"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            app:layout_constraintTop_toBottomOf="@id/ImagenDeLaFacultadCarreraViewPrivada"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/DescripcionCarreraViewPrivada"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/SpinnerAñoDeMateriasViewPrivada"
            android:layout_marginTop="20sp"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/SpinnerAñoDeMateriasViewPrivada"
            app:layout_constraintLeft_toRightOf="@id/SpinnerAñoDeMateriasViewPrivada"
            android:id="@+id/SpinnerMateriasViewPrivada"
            android:layout_marginTop="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="aca va la descripcion de la materia"
            android:id="@+id/DescripcionMateria"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            app:layout_constraintTop_toBottomOf="@id/SpinnerMateriasViewPrivada"
            android:textColor="#000000"
                />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>