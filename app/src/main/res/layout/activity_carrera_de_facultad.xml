<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20sp"
        android:id="@+id/ImagenDeLaFacultadCarreraViewPrivada"/>
    <TextView
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginStart="20sp"
        android:text="Nombre de la carrera"
        app:layout_constraintBottom_toBottomOf="@id/ImagenDeLaFacultadCarreraViewPrivada"
        app:layout_constraintTop_toTopOf="@id/ImagenDeLaFacultadCarreraViewPrivada"
        android:layout_marginTop="5sp"
        android:id="@+id/NombreDeLaCarreraViewPrivada"
        android:layout_marginLeft="40sp"
        app:layout_constraintLeft_toRightOf="@id/ImagenDeLaFacultadCarreraViewPrivada"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="aca va la descripcion"
        android:textColor="#000000"
        android:id="@+id/DescripcionCarreraViewPrivada"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="10sp"
        app:layout_constraintTop_toBottomOf="@id/ImagenDeLaFacultadCarreraViewPrivada"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/DescripcionCarreraViewPrivada"
        android:id="@+id/SpinnerAñoDeMateriasViewPrivada"
        android:layout_marginTop="20sp"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/SpinnerAñoDeMateriasViewPrivada"
        android:id="@+id/SpinnerMateriasViewPrivada"
        android:layout_marginTop="20sp"
        />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content"
        android:id="@+id/ScollingSection"
        app:layout_constraintTop_toBottomOf="@id/SpinnerMateriasViewPrivada">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:id="@+id/DescripcionMateria"
            app:layout_constraintTop_toTopOf="@id/ScollingSection"
            />
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>