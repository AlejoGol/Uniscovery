<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SearchView
        android:id="@+id/SearchBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="72dp"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pagina_anterior"
        app:layout_constraintTop_toBottomOf="@id/SearchBuscar"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Siguiente"
        app:layout_constraintBottom_toTopOf="@id/ListaCarreras"
        android:id="@+id/anterior"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/siguiente_pagina"
        app:layout_constraintTop_toBottomOf="@id/SearchBuscar"
        app:layout_constraintLeft_toRightOf="@id/anterior"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ListaCarreras"
        android:id="@+id/Siguiente"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ListaCarreras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/anterior"
        />


</android.support.constraint.ConstraintLayout>