<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CardViewRecipiente"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <SearchView
        android:id="@+id/SearchBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="72dp"
        android:queryHint="Ingrese algo relacionado con la/s carrera/s que quiera buscar"
        app:layout_constraintTop_toTopOf="@id/CardViewRecipiente"
        android:iconifiedByDefault="false"
        app:layout_constraintBottom_toBottomOf="@id/CardViewRecipiente"
        />
    </android.support.v7.widget.CardView>
    <GridView
        android:id="@+id/ListaACargar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50sp"
        android:columnWidth="120sp"
        android:gravity="start"
        android:horizontalSpacing="10sp"
        android:numColumns="auto_fit"
        android:orientation="vertical"
        android:verticalSpacing="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CardViewRecipiente"
        />
</android.support.constraint.ConstraintLayout>