<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnWidth="120sp"
    android:numColumns="auto_fit"
    android:orientation="vertical"
    android:verticalSpacing="10sp"
    android:horizontalSpacing="10sp"
    android:gravity="start">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="175sp"
    android:layout_marginBottom="20sp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="150sp"
        android:layout_height="100sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="5sp"
        android:id="@+id/ImagenFacultad"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingTop="10sp"
            android:textColor="#000000"
            app:layout_goneMarginBottom="15sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/ImagenFacultad"
            app:layout_constraintTop_toBottomOf="@id/ImagenFacultad"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/NombreCarrera"
            android:layout_marginBottom="10sp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
</GridLayout>
