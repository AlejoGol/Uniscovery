<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CreadoPor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Igal"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:text="@string/creado_por"
        android:textSize="25sp"/>

    <TextView
        android:layout_marginRight="60sp"
        android:id="@+id/Igal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Igal Pisterman Rozenek"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/Y"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CreadoPor" />
    <TextView
        android:layout_marginRight="180sp"
        android:id="@+id/Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="y"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/Alejo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Igal" />
    <TextView
        android:layout_marginRight="110sp"
        android:id="@+id/Alejo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alejo Goltzman"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/CreadoCon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Y" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CreadoCon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:paddingTop="30sp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Utilizando android Studios y sqLite"
        app:layout_constraintTop_toBottomOf="@id/Alejo"/>
</android.support.constraint.ConstraintLayout>