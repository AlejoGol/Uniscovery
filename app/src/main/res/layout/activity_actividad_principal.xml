<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadPrincipal">

    <ImageButton
        android:id="@+id/ImagenPrincial"
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="28dp"
        android:minHeight="150dp"
        android:src="@drawable/logogrande2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/ImagenPrincial"
        app:layout_constraintBottom_toTopOf="@+id/BotonBuscarInformacion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:maxWidth="300sp"
        android:maxHeight="300sp"
        android:text="Realiza un test para saber un poco mas sobre vos mismo"
        android:scrollbarSize="20dp"
        android:id="@+id/BotonIrAlTest"
        android:background="@drawable/btn_basico"
        android:textColor="@drawable/txt_btn_basico"
        android:onClick="IrANuevaPantalla"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/BotonIrAlTest"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_basico"
        android:textColor="@drawable/txt_btn_basico"
        android:maxWidth="300sp"
        android:text="Realiza un test para saber un poco mas sobre vos mismo"
        android:scrollbarSize="20dp"
        android:layout_marginTop="80dp"
        android:maxHeight="300sp"
        android:id="@+id/BotonBuscarInformacion"
        />
</android.support.constraint.ConstraintLayout>